@model IEnumerable<WebApplication12.Models.Company>

<h2>Company List</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Actions</th>
    </tr>
    @foreach (var company in Model)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.Address</td>
            <td>
                <a asp-action="Edit" asp-route-id="@company.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@company.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" class="btn btn-primary">Add Company</a>

@model WebApplication12.Models.User

<h2>Delete User</h2>
<p>Are you sure you want to delete @Model.FirstName @Model.LastName?</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger btn-lg" style="border-radius: 5px; font-weight: bold;">
        <i class="bi bi-trash-fill"></i> Confirm
    </button>
</form>

